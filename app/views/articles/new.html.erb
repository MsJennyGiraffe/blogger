<h1>Create a New Article</h1>

<%= form_for(@article) do |form|  %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <p>
    <%= form.label      :title %><br />
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label      :body %>
    <%= form.text_field :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
